<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="viewport" content="width=device-width,height=device-height,initial-scale=1.0,  shrink-to-fit=no"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
</head>
<body class="res" id="back">
    <br>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="titleW text-center">Welcome to {{name}} <br> WTB Live Page!</h1>
            </div>
            <div class="col-lg-12 text-center mt-3">
                <a id="switch" onclick="DarkMode()">Switch to Dark Mode </a>
            </div>
        </div>
    </div>
    <div class="home_section">    
        <div class="cards">
            {{#each data}}
            <div class="card2 text-center">
                <div class="row">
                    <img src="{{product_image}}" class="imgShow">
                    </div>
                    <hr class="divider">
                    <div class="col-lg-12">
                    <h5 class="subTitleCard text-right">Product Name</h5>
                    <h1 class="title ">{{product_name}} 
                    </div>
                    <hr class="divider">
                    <div class="col-lg-12 text-right">
                    <h5 class="subTitleCard text-right">Product Sku</h5>
                    <h1 class="title ">{{product_sku}}</h1>
                    </div> 
                    <hr class="divider">
                    <div class="col-lg-12">
                    <h5 class="subTitleCard text-right">Sizes Needed</h5>
                    <span class="  sizerange">{{product_sizes}}</span>
                    </div>
                    <hr class="divider">
                    <div class="col-lg-12">
                    <button class="buttonSearch2" onclick="messengerOpen();">Contact me</button>
                </div>
            </div>
        {{/each}}
        </div>
    </div>
    <script>
    function messengerOpen() {
        window.open("https://www.messenger.com/t/wethenew/", "_blank");
    };

    function DarkMode() {
        const button = document.getElementById("switch");
        const body = document.getElementById("back");
        if (body.classList.contains("res")){
            body.classList.remove("res");
            body.classList.add("resBlack");
            button.innerText = "Switch to Light Mode";
        } else {
            body.classList.remove("resBlack");
            body.classList.add("res");
            button.innerText = "Switch to Dark Mode";
        }
    }

    </script>
</body>
</html>