<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="viewport" content="width=device-width,height=device-height,initial-scale=1.0,  shrink-to-fit=no"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="backFix2">
        <div class="row">
            <div class="mb-1 text-center col-lg-12">
                <h4 class="title">Welcome to E-Learning Platform</h4>
                <p class="text-center subTitle">Sign in to join the become intelligent!</p>
            </div>
        </div>
        <form id="form" method="POST"> 
        <div class="putain2">
                <div class="row">
                <div class="col-lg-12">
                    <label class="subTitle" for="name">Username</label>
                    <input name="name" type="name" class="mt-2 formInput" id="name" >
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 mt-4">
                    <label class="subTitle" for="email">Email address</label>
                    <input name="email" type="email" class="mt-2 formInput" id="email" >
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 mt-4">
                    <label class="subTitle" for="password">Password</label>
                    <input name="password" type="password" class="mt-2 formInput" id="password" >
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 mt-4">
                    <label class="subTitle" for="passwordConfirm">Confirm Password</label>
                    <input name="passwordConfirm" type="password" class="mt-2 formInput" id="passwordConfirm" >
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 mt-4">
                    <button type="submit" class="buttonForm">Create Account</button>
                </div>
            </div>
        </div>
        <div class="putain3">
            <div class="row">
                <div class="col-lg-12">
                    <p class="text-center subTitle">Already have an account? <a href="/login" target="_blank">Sign in.</a></p>
                </div>
            </div>
        </div>
        </form>

        {{#if message}}
            <p class="alert2 text-center mt-2">{{message}}</p>
        {{/if}}
    </div>

    <!--SCRIPTS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>

